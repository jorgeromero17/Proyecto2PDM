<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/pubnombreusuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jorge Eduardo Romero García"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/pubdescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esta es una descripción de prueba porque necesitamos probar que tan bien se ve"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:id="@+id/pubimagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="300dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="#CDCDD4"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>